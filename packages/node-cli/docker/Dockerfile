FROM container-registry.oracle.com/java/jdk:11

## ----------------------------------------------------------------------------
## --- INSTALLING PACKAGES ----------------------------------------------------
## ----------------------------------------------------------------------------
RUN yum install -y make gcc*

## ----------------------------------------------------------------------------
## --- INSTALLING NODE --------------------------------------------------------
## ----------------------------------------------------------------------------
RUN curl -sL https://rpm.nodesource.com/setup_14.x | bash -
RUN yum install -y nodejs

## ----------------------------------------------------------------------------
## --- INSTALLING SUITECLOUD CLI ----------------------------------------------
## ----------------------------------------------------------------------------
RUN npm install -g @oracle/suitecloud-cli@1.1.2 --unsafe-perm

WORKDIR /app
